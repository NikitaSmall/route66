<h1>Список альбомов</h1>

<p id="notice" class="text-warning"><%= notice %></p>

<table class="table table-striped table-responsive">
  <thead>
    <tr>
      <th>Название</th>
      <th>Название в адресной строке</th>
      <th>Описание</th>
      <th>Операции</th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= album.title %></td>
        <td><%= album.address %></td>
        <td><%= album.description %></td>
        <td>
          <%= link_to 'Подробнее', album, class: "btn btn-info" %>
          <%= link_to 'Редактировать', edit_album_path(album), class: "btn btn-warning" %>
          <%= link_to 'Удалить!', album, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="text-center">
  <%= will_paginate @albums, renderer: BootstrapPagination::Rails %>
</div>
<br />
<br />
<%= link_to 'Новый альбом', new_album_path, class: "btn btn-success bottomness" %>
